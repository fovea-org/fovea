{
	"name": "fovea",
	"private": true,
	"description": "Fovea is a tool for generating tiny, incredibly powerful Web Components.",
	"repository": {
		"type": "git",
		"url": "https://github.com/fovea-org/fovea.git"
	},
	"bugs": {
		"url": "https://github.com/fovea-org/fovea/issues"
	},
	"contributors": [
		{
			"name": "Frederik Wessberg",
			"email": "frederikwessberg@hotmail.com",
			"url": "https://github.com/wessberg"
		}
	],
	"engines": {
		"node": ">=10.1.0"
	},
	"license": "MIT",
	"scripts": {
		"generate:readme": "scaffold readme --blacklist \\`fovea\\`,description,usage",
		"generate:license": "scaffold license",
		"generate:contributing": "scaffold contributing",
		"generate:coc": "scaffold coc",
		"generate:all": "npm run generate:license & npm run generate:contributing & npm run generate:coc & npm run generate:readme",
		"codegen": "ts-node --project build/tsconfig.json build/extend-package-json-files.ts",
		"lint": "lerna run lint",
		"test": "lerna run test",
		"build": "lerna run build",
		"update:shared": "ncu -ua && npm update && npm install",
		"update:packages": "lerna exec -- ncu -ua --reject '/fovea/' && lerna exec -- npm update && lerna exec -- npm install",
		"update": "npm run update:shared && npm run update:packages",
		"audit": "lerna exec -- nsp check",
		"prebootstrap": "npm run codegen && npm run update",
		"bootstrap": "lerna bootstrap --ignore-scripts",
		"validate": "npm run lint && npm run test",
		"prepublish:patch": "npm run bootstrap && NODE_ENV=production npm run build && npm run validate",
		"publish:patch": "NODE_ENV=production lerna publish patch --conventional-commits --yes",
		"lerna": "lerna"
	},
	"devDependencies": {
		"@wessberg/rollup-plugin-di": "^1.0.86",
		"@wessberg/rollup-plugin-ts": "0.0.40",
		"@wessberg/scaffold": "1.0.1",
		"ava": "^0.25.0",
		"chalk": "^2.4.1",
		"deep-extend": "^0.6.0",
		"glob": "^7.1.3",
		"lerna": "^3.2.1",
		"npm-check-updates": "^2.14.2",
		"nsp": "^3.2.1",
		"rollup": "^0.65.0",
		"ts-node": "^7.0.1",
		"tslib": "^1.9.3",
		"tslint": "^5.11.0",
		"typescript": "^3.0.3"
	},
	"dependencies": {
		"@types/deep-extend": "^0.4.31",
		"@types/glob": "^5.0.35"
	},
	"scaffold": {
		"patreonUserId": "11315442",
		"logo": "./documentation/asset/fovea_icon.png",
		"contributorMeta": {
			"Frederik Wessberg": {
				"imageUrl": "https://avatars2.githubusercontent.com/u/20454213?s=460&v=4",
				"role": "Lead Developer",
				"twitterHandle": "FredWessberg",
				"isCocEnforcer": true
			}
		},
		"backers": []
	}
}
